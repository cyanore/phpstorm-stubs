{
	"name"        : "cyanore/phpstorm-stubs",
	"description" : "PHP runtime & extensions header files for PhpStorm",
	"homepage"    : "https://www.jetbrains.com/phpstorm",
	"license"     : "Apache-2.0",
	"keywords"    : [
		"JetBrains",
		"PHPStorm",
		"stubs",
		"autocomplete",
		"type",
		"inference",
		"code",
		"inspection"
	],
	"require-dev" : {
		"php"                              : "^8.0",
		"nikic/php-parser"                 : "@stable",
		"phpdocumentor/reflection-docblock": "@stable",
		"phpunit/phpunit"                  : "@stable"
	},
	"autoload"    : {
		"psr-4": {
			"JetBrains\\PhpStorm\\"          : "meta/attributes/",
			"JetBrains\\PhpStorm\\Internal\\": "meta/attributes/internal/"
		},
		"files": [
			"PhpStormStubsMap.php"
		]
	},
	"autoload-dev": {
		"psr-4": {
			"StubTests\\": "tests/"
		}
	},
	"scripts"     : {
		"cs"    : "php-cs-fixer fix -v --diff --dry-run",
		"cs-fix": "php-cs-fixer fix -v --diff"
	},
	"replace"     : {
		"jetbrains/phpstorm-stubs": "self.version"
	},
	"repositories": [
		{
			"type"   : "path",
			"url"    : "../../../../",
			"options": {
				"symlink": true
			}
		},
		{
			"type"   : "path",
			"url"    : "../../../../projects/*/*",
			"options": {
				"symlink": true
			}
		},
		{
			"type"   : "path",
			"url"    : "../../../../libraries/composer-packages/*/*",
			"options": {
				"symlink": true
			}
		}
	]
}
